    int* arr = new int[n];

    cout << "Enter elements of the array:" << endl;
    for (int i = 0; i < n; ++i) {
        cin >> *(arr + i);
    }

    int duplicates = countDuplicates(arr, n);

    cout << "Number of duplicates: " << duplicates << endl;

