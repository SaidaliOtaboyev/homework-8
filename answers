  cout<<"Problem 5: \n"<<endl;
 int n1, n2;

    cout << "Enter size of the first array: ";
    cin >> n1;
    int* arr1 = new int[n1];
    cout << "Enter elements of the first array:" << endl;
    for (int i = 0; i < n1; ++i) {
        cin >> *(arr1 + i);
    }

    cout << "Enter size of the second array: ";
